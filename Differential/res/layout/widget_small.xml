<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:padding="@dimen/widget_margin">
	<LinearLayout android:id="@+id/widgetlayout"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:background="@drawable/widget_background" android:padding="2sp"
		android:orientation="vertical">

		<include layout="@layout/widget_main" />

		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:background="@drawable/widget_vidi_gradient">
			<TextView android:id="@+id/datetime1" android:textSize="12sp"
				android:layout_width="101sp" android:layout_height="wrap_content"
				android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
				android:gravity="center_horizontal" android:singleLine="true" />
			<TextView android:id="@+id/gameweek1" android:textSize="14sp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#AAFFFF00" android:layout_below="@+id/datetime1"
				android:layout_alignParentLeft="true" android:layout_marginRight="3sp" />
			<TextView android:id="@+id/message1" android:textSize="14sp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/datetime1" android:layout_marginLeft="3sp" />
			<ImageView android:id="@+id/cat_background1"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@+id/datetime1" android:layout_toRightOf="@+id/gameweek1"
				android:layout_toLeftOf="@+id/message1" android:layout_alignBottom="@+id/cat1"
				android:contentDescription="Category" android:scaleType="fitXY" />
			<TextView android:id="@+id/cat1" android:textSize="12sp"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@+id/datetime1" android:layout_toRightOf="@+id/gameweek1"
				android:layout_toLeftOf="@+id/message1" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:background="@drawable/widget_vidi_gradient">
			<TextView android:id="@+id/datetime2" android:textSize="12sp"
				android:layout_width="101sp" android:layout_height="wrap_content"
				android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
				android:gravity="center_horizontal" android:singleLine="true" />
			<TextView android:id="@+id/gameweek2" android:textSize="14sp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#AAFFFF00" android:layout_below="@+id/datetime2"
				android:layout_alignParentLeft="true" android:layout_marginRight="3sp" />
			<TextView android:id="@+id/message2" android:textSize="14sp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/datetime2" android:layout_marginLeft="3sp" />
			<ImageView android:id="@+id/cat_background2"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@+id/datetime2" android:layout_toRightOf="@+id/gameweek2"
				android:layout_toLeftOf="@+id/message2" android:layout_alignBottom="@+id/cat2"
				android:contentDescription="Category" android:scaleType="fitXY" />
			<TextView android:id="@+id/cat2" android:textSize="12sp"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@+id/datetime2" android:layout_toRightOf="@+id/gameweek2"
				android:layout_toLeftOf="@+id/message2" />
		</RelativeLayout>

	</LinearLayout>
</FrameLayout>