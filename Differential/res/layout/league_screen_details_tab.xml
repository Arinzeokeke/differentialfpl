<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/infotab" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<TextView android:id="@+id/leagueinfo" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="18sp" />
	<TextView android:id="@+id/rivalsButton" android:text="Set all teams in league as rivals"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:clickable="true" android:onClick="clickRivals"
		android:textColor="#FFFFFF" android:textSize="19sp" android:maxLines="1"
		android:paddingTop="4sp" android:paddingBottom="4sp"
		android:paddingLeft="2sp" android:paddingRight="2sp"
		android:background="#44ffffff" android:layout_marginTop="3sp" />
</LinearLayout>