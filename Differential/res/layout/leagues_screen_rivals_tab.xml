<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rivalstab" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView android:id="@+id/rivalsheader" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="22sp"
		android:textColor="#FFFF00" android:layout_alignParentTop="true" />
	<ListView android:id="@+id/rivals" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@+id/rivalsheader" />
</RelativeLayout>