<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="0dip"
	android:layout_weight="0.2" android:gravity="center_horizontal" >
	<TextView android:id="@+id/playertextview" android:textSize="10sp"
		android:padding="0dp" android:drawablePadding="0dp" android:clickable="true"
		android:onClick="clickPlayer" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_horizontal" />
	<com.pennas.fpl.ui.Ticker android:id="@+id/ticker"
		android:layout_width="45sp" android:layout_height="13sp"
		android:padding="0dp" android:layout_alignTop="@+id/playertextview"
		android:layout_centerHorizontal="true" />
</RelativeLayout>