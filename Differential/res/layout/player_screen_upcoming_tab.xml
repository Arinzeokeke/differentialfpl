<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/information" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical">
	<ImageView android:id="@+id/opponentShirt"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:contentDescription="Opponent shirt" />
	<TextView android:id="@+id/header" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="19sp"
		android:layout_toRightOf="@+id/opponentShirt"
		android:layout_alignParentTop="true" />
	<TextView android:id="@+id/blurb" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="14sp"
		android:layout_toRightOf="@+id/opponentShirt"
		android:layout_below="@+id/header" />
	<ListView android:id="@+id/pastList" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@+id/blurb" />
</RelativeLayout>
