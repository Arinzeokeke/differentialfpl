<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tab_notes" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView android:id="@+id/notes_left" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="26sp"
		android:layout_alignParentLeft="true" android:layout_alignParentTop="true" />
	<Button android:id="@+id/submit_notes" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentRight="true"
		android:layout_alignParentTop="true" android:text="Upload" android:onClick="clickNotes" />
	<EditText android:id="@+id/notes" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@+id/submit_notes"
		android:hint="Notes" android:scrollbars="vertical" />
</RelativeLayout>